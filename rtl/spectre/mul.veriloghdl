module addrcalcsec_mul(
  A,B,attr,res);

  input [63:0] A;
  input [11:0] B;
  input [3:0] attr;
  output [63:0] res;

  wire [7:0] low;
  wire C;
  wire [6:0] hi;
  wire [7:0] oldhi;
  wire [43:0] BB;
  wire [31:0] dummy;
  wire [37:0] dummy2;

  assign {BB,dummy}<={31'b0,A[`ptr_hi],5'h1f,32'hffff_ffff}<<A[`ptr_exp];

  addrcalcsec_shift8 shf_mod(B[11:7],A[43:4],low);
  addrcalcsec_shift8 shf2_mod(B[11:7],BB[43:4],oldhi);

  adder #(7) add_mod(low[6:0],B[6:0],hi,1'b0,1'b1,C,,,);

  adder #(44) dec_mod(ptr[43:0],(82'h3fffffff8000000000|{low[6:0],ptr[37:0]})<<ptr[`ptr_exp],
     {res[43:0],dummy2},1'b0,
    B==0 && low[7] != ptr[ptr_on_low],,,,);
  adder #(44) dec_bmod(ptr[43:0],({32'b0,low[6:0],ptr[37:0]})<<ptr[`ptr_exp]
     ,{res[43:0],dummy2},1'b0,
    B==0 && low[7] == ptr[ptr_on_low],,,,);
   

  assign res[`ptr_exp]=(B[11:7]>A[`ptr_exp] && attr[3]) ? 5'b0 : B[11:7];
  assign res[`ptr_low]=B ? low[6:0] : ptr[`ptr_low];
  assign res[`ptr_hi]=hi<=oldhi[7:1] || !B ? oldhi[6:0] : hi;
  assign res[`ptr_on_low]=B ? low[7] : ptr[ptr_on_low];
  assign res[43:0]=A[43:0];
endmodule
